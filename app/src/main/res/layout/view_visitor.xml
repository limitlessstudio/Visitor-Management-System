<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvVisitor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="30dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <RelativeLayout
            android:id="@+id/rv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFoto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgVisitor"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_foto" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/cvFoto"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNama"
                    style="@style/Text15GRB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/txtInstansi"
                    style="@style/Text15GRSB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="-" />

                <TextView
                    android:id="@+id/txtTelpVis"
                    style="@style/Text15GRSB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="-" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/txtTujuan"
            style="@style/Text15GRSB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rv1"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button"
            android:backgroundTint="#DCE4E3"
            android:padding="13dp"
            android:text="-" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>